<odoo>
  <data>
    <record id="account_internal_notes_invoice_form" model="ir.ui.view">
      <field name="name">account.internal.notes.invoice.form.view</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form" />
      <field name="priority" eval="20" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='other_info']//field[@name='origin']" position="after">
          <field name="origin_m2o_so" string="Quotation" attrs="{'invisible': ['|',('origin', '=', False), ('type','=','out_refund')]}"/>
          <field name="origin_m2o_ai" string="Invoice" attrs="{'invisible': ['|',('origin', '=', False), ('type','!=','out_refund')]}"/>
          <field name="origin_m2m" widget="my_many2many_tags"/>
        </xpath>
      </field>
    </record>
    <record id="account_internal_notes_invoice_supplier_form" model="ir.ui.view">
      <field name="name">account.internal.notes.invoice.supplier.form.view</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form" />
      <field name="priority" eval="20" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='origin']" position="after">
          <field name="origin_m2o_po" string="Purchase Order" attrs="{'invisible': ['|',('origin', '=', False), ('type','=','in_refund')]}"/>
          <field name="origin_m2o_ai" string="Vendor Bill" attrs="{'invisible': ['|',('origin', '=', False), ('type','!=','in_refund')]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>